<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_widget"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_grid_standard"
            style="@style/ButtonStyle"
            android:text="Grid Standard"/>

        <Button
            android:id="@+id/btn_grid_has_header"
            style="@style/ButtonStyle"
            android:text="Grid Has Header"/>

        <Button
            android:id="@+id/btn_grid_auto_fit"
            style="@style/ButtonStyle"
            android:text="Grid Auto Fit"/>
    </LinearLayout>
</LinearLayout>