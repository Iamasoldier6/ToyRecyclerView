<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.iamasoldier6.toyrecyclerview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".base.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".linear.LinearActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".linear.HorizontalActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".linear.VerticalActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".grid.GridActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".grid.GridStandardActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".grid.GridHeaderActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".grid.GridAutofitActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".staggered.StaggeredActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".decoration.DecorationActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".decoration.StandardDecorationActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".decoration.OverdrawDecorationActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".animator.ItemAnimatorActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".animator.HeaderAnimatorActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".animator.FooterAnimatorActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".refresh.SwipeRefreshActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>